---
const { title } = Astro.props;
---

<section class="gc-wrapper">
  <article class="gc-card">
    {title && (
      <header class="gc-header">
        <h1 class="gc-header-title">{title}</h1>
      </header>
    )}

    <div class="gc-body">
      <slot />
    </div>
  </article>
</section>

<style>
  .gc-wrapper {
    padding: 1.5rem 1rem 3rem;
    display: flex;
    justify-content: center;
    font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
  }

  .gc-card {
    width: 100%;
    max-width: 960px;
    border-radius: 24px;
    border: 1px solid #e4e4e4;
    background: #ffffff;
    box-shadow: 0 18px 40px rgba(15, 23, 42, 0.08);
    padding: 1.75rem;
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
  }

  .gc-header-title {
    margin: 0 0 0.5rem 0;
    font-size: 1.1rem;
    font-weight: 600;
    color: #64748b;
  }

  .gc-body {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
  }

  @media (min-width: 768px) {
    .gc-body {
      flex-direction: row;
      align-items: stretch;
    }
  }
</style>
